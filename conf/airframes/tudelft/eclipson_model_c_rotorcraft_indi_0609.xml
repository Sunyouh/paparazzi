  <servos driver="Pwm">
    <servo name="S_THROTTLE" no="0" min="1100" neutral="1110" max="1900"/>
    <servo name="S_AILERON_LEFT" no="1" min="1900" neutral="1500" max="1100"/>
    <servo name="S_AILERON_RIGHT" no="4" min="1100" neutral="1460" max="1900"/>
    <servo name="S_ELEVATOR" no="2" min="1100" neutral="1500" max="1900"/>
    <servo name="S_RUDDER" no="3" min="1900" neutral="1510" max="1100"/>
  </servos>

  <commands>
    <axis name="ROLL"   failsafe_value="0"/>
    <axis name="PITCH"  failsafe_value="0"/>
    <axis name="YAW"    failsafe_value="0"/>
    <axis name="THRUST" failsafe_value="0"/>
  </commands>

  <rc_commands>
    <set command="THRUST"   value="@THROTTLE"/>
    <set command="ROLL"     value="@ROLL"/>
    <set command="PITCH"    value="@PITCH"/>
    <set command="YAW"      value="@YAW"/>
  </rc_commands>

  <command_laws>
    <let var="th_hold"     value="LessThan(RadioControlValues(RADIO_TH_HOLD), -4800)"/>
    <let var="manual"     value="LessThan(RadioControlValues(RADIO_MODE), -4800)"/>
    <let var="autopil"     value="(1-($manual))"/>

    <set servo="S_THROTTLE" value="$th_hold? -9600 : @THRUST"/>
    <set servo="S_AILERON_LEFT" value="@ROLL * $manual + actuators_pprz[0] * $autopil"/>
    <set servo="S_ELEVATOR" value="@PITCH * $manual + actuators_pprz[2] * $autopil"/>
    <set servo="S_RUDDER" value="@YAW * $manual + actuators_pprz[3] * $autopil"/>
    <set servo="S_AILERON_RIGHT" value="-@ROLL * $manual + actuators_pprz[1] * $autopil"/>
 </command_laws>
